{
  "name": "se-t4",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "lerna run --parallel dev",
    "build": "lerna run build",
    "format": "lerna run format",
    "lint": "lerna run lint",
