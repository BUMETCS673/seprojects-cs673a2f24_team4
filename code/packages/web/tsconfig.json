{
  "compilerOptions": {
    /* Basic Options */
    "baseUrl": ".",
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "ES2022", "ES2023", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Module Resolution for Bundlers */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,

    /* Linting and Strict Type-Checking Options */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Jest and Testing */
    "types": ["jest", "@testing-library/jest-dom"], // Ensure Jest types are available globally
    "resolveJsonModule": true, // Allows importing JSON files, useful for testing configurations

    /* Paths (if needed for imports) */
    "paths": {
      /* Add any path mappings you might need for package resolution */
      "@src/*": ["src/*"]
    }
  },
  "include": ["src/**/*"],
  "references": [
    // { "path": "./tsconfig.app.json" },
    // { "path": "./tsconfig.node.json" }
  ]
}
